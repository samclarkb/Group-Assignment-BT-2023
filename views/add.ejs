<div>
	<%- include('partials/header', {title: 'Add Album' , image: user[0].Profilepic.data, username: user[0].Username })
		%>
		<div class="addForm">
			<form action="/add" method="POST" enctype="multipart/form-data" key="File">
				<div class="formText">
					<label for="Title">
						<h2>Title:</h2>
					</label>
					<input id="Title" type="text" name="Title" required />
				</div>
				<div class="formText">
					<label for="Artist">
						<h2>Artist:</h2>
					</label>
					<input id="Artist" type="text" name="Artist" required />
				</div>
				<div class="formText">
					<label for="Description">
						<h2>Description:</h2>
					</label>
					<textarea id="Description" type="text" name="Description" required></textarea>
				</div>

				<fieldset>
					<legend>
						<h2>Year:</h2>
					</legend>
					<input type="radio" id="90's" name="Year" value="90's" checked />
					<label for="90's">90's</label>
					<input type="radio" id="00's" name="Year" value="00's" />
					<label for="00's">00's</label>
					<input type="radio" id="10's" name="Year" value="10's" />
					<label for="10's">10's</label>
					<input type="radio" id="20's" name="Year" value="20's" />
					<label for="20's">20's</label>
				</fieldset>
				<fieldset>
					<Legend>
						<h2>Genre:</h2>
					</Legend>
					<input type="radio" id="Jazz" name="Genre" value="Jazz" checked />
					<label for="Jazz">Jazz</label>
					<input type="radio" id="Trap" name="Genre" value="Trap" />
					<label for="Trap">Trap</label>
					<input type="radio" id="Alternative" name="Genre" value="Alternative" />
					<label for="Alternative">Alternative</label>
				</fieldset>
				<legend>
					<h2>Album Cover:</h2>
				</legend>
				<div class="formText">
					<input id="File" type="File" name="File" required />
					<label for="File"><img src="../images/plus.png" alt="" /></label>
				</div>
				<input class="buttonAdd" type="submit" value="Add" />
			</form>
		</div>
		<%- include('partials/navigation') %>
</div>